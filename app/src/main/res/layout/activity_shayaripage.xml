<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shayaripage_Activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_weight="3.8">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img1"
            android:src="@drawable/img_15"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_70sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1/10"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#228936"
            android:textSize="@dimen/_20sdp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/img2"
            android:layout_gravity="center"
            android:src="@drawable/img_16"
            android:paddingRight="@dimen/_70sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#F6F5F5"
        android:orientation="vertical"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="some text"
                android:padding="@dimen/_50sdp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/txt1"
                android:background="#E11688"
                android:layout_weight="0.4"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_6sdp"
                android:textSize="25sp"/>
        </ScrollView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#228A36"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_weight="3.3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/img3"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_gravity="center"
            android:src="@drawable/baseline_file_copy_24"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/img4"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_17"
            android:id="@+id/img5"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/img6"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/img7"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/baseline_share_24"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>